tar:
- Initial : tar cPf "$HOME/Example_backup" "$HOME/important_file/"
- ONGOING : tar uPf "Example_backup" "$HOME/important_file/"
- RECOVERY: tar xfpP "$HOME/Example_backup"
- SHOW    : tar tPf "$HOME/Example_backup"

